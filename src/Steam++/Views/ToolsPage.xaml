<UserControl x:Class="SteamPP.Views.ToolsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:SteamPP.Views">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Tools &amp; Resources"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,30"/>

        <!-- Tabbed Tools -->
        <TabControl Grid.Row="1"
                    Background="Transparent"
                    BorderThickness="0"
                    SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"
                                        Background="{DynamicResource SecondaryDarkBrush}"
                                        BorderThickness="0"
                                        CornerRadius="8,8,0,0"
                                        Padding="20,10"
                                        Margin="0,0,5,0">
                                    <ContentPresenter ContentSource="Header"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
            </TabControl.Resources>

            <!-- GBE Tab -->
            <TabItem Header="GBE">
                <views:GBEDenuvoControl HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
            </TabItem>

            <!-- External Resources Tab -->
            <TabItem Header="ðŸŒ External Resources">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel MaxWidth="800" HorizontalAlignment="Left" Margin="0,20,0,0">

                        <!-- SteamTools Section -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="SteamTools"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Download SteamTools for standard game management"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,15"/>
                                <Button Content="ðŸ”— Download SteamTools"
                                        Command="{Binding OpenSteamToolsCommand}"
                                        HorizontalAlignment="Left"
                                        Padding="20,10"/>
                            </StackPanel>
                        </Border>

                        <!-- Fixes Section -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Fixes"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Download Fixes and DLC Unlockers for various games"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,15"/>
                                <Button Content="ðŸ”— Download Fixes"
                                        Command="{Binding OpenFixesCommand}"
                                        HorizontalAlignment="Left"
                                        Padding="20,10"/>
                            </StackPanel>
                        </Border>



                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
